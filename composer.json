{
    "name": "Andyredfern/Fixedwidth",
    "type": "library",
    "description": "A PHP package to create fixed width files",
    "keywords": [
        "fixed width filer", "php","andyredfern"
    ],
    "homepage": "https://github.com/andyredfern/fixedwidth",
    "license": "MIT",
    "authors": [
        {
            "name": "Andy Redfern",
            "email": "andy@redfern.it",
            "homepage": "http://redfern.it",
            "role": "Developer"
        }
    ],
   "require-dev": {
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"       
    },
    "autoload": {
        "psr-4": {
            "Andyredfern\\Fixedwidth\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Andyredfern\\Fixedwidth\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
